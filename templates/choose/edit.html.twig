{% extends 'base.html.twig' %}

{% block title %}Fiche élève
{% endblock %}

{% block body %}
	<h1>Fiche élève</h1>

	<div class="row">
		<div class="col-md-12 text-center">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">{{ user.firstname}}
						{{ user.name }}</h5>
					<p class="card-text">{{ user.dateOfBirth|date("m/d/Y") }}</p>
				</div>
			</div>
		</div>
	</div>

	{{ include('choose/_form.html.twig', {'button_label': 'Mise à jour'}) }}
	<a href="{{ path('choose_index') }}" class="btn btn-secondary">Retour à la liste</a>

{% endblock %}
