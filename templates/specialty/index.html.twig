{% extends 'base.html.twig' %}

{% block title %}Specialty index{% endblock %}

{% block body %}
    <h1>Specialty index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Duration</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for specialty in specialties %}
            <tr>
                <td>{{ specialty.id }}</td>
                <td>{{ specialty.name }}</td>
                <td>{{ specialty.duration }}</td>
                <td>{{ specialty.createdAt ? specialty.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ specialty.updatedAt ? specialty.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('specialty_show', {'id': specialty.id}) }}">show</a>
                    <a href="{{ path('specialty_edit', {'id': specialty.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('specialty_new') }}">Create new</a>
{% endblock %}
