{% extends 'base.html.twig' %}

{% block title %}Spécialité
{% endblock %}

{% block body %}
	<h1>Spécialité</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ specialty.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ specialty.name }}</td>
			</tr>
			<tr>
				<th>Date de création</th>
				<td>{{ specialty.createdAt ? specialty.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Date de mise à jour</th>
				<td>{{ specialty.updatedAt ? specialty.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('specialty_index') }}" class="btn btn-secondary">Retour à la liste</a>

	<a href="{{ path('specialty_edit', {'id': specialty.id}) }}" class="btn btn-warning">Editer</a>

	{{ include('specialty/_delete_form.html.twig') }}
{% endblock %}
